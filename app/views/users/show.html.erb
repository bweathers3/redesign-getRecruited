<h1><%= @user.firstName %> <%= @user.secondName %></h1>

<div class="row">
  <div class="col-md-5">
    <p><%= @user.email %></p>
  </div>
  <div class="col-md-7">
    <%= link_to "Add New Athlete", new_athlete_path(@user), class: 'btn btn-primary' %>
    <%= link_to "Edit Master Account", edit_user_path(@user), class: 'btn btn-success' %>
    <%= link_to "Delete Master Account", @user, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this user?'} %>
  </div>
  <div class="col-md-4">
    <h3 class="media-heading">
      Your Athletes
    </h3>
    <% @user.athletes.each do |athlete| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to athlete.firstName + " " + athlete.secondName, athlete %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">

  </div>
</div>
